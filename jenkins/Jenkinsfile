pipeline {
    agent any
    tools {
        maven 'maven3' // Use the version that satisfies the plugin requirement
    }
    stages {
       stage('Compile & build')
            {
            steps
                {
                   sh "${env.MAVEN_HOME}/bin/mvn clean package" 
                }             
        }
        stage('Build Docker Image') {
    steps {
        script {
            docker.withRegistry('https://index.docker.io/v1/', 'docker_cred') {
                def dockerImage = docker.build("rupeshreddy17/maven:${env.BUILD_ID}")
                dockerImage.push()
            }
        }
    }
}
 stage('Run Docker Container') {
    steps {
        script {
            
            docker.image("rupeshreddy17/maven:${env.BUILD_ID}").pull()

            // Run the Docker container on a different local port (e.g., 9090)
            def container = docker.container('rupeshreddy17/maven:${env.BUILD_ID}').withRun('-p 9090:8080')

            // Wait for the container to exit
            container.wait()
        }
    }
}

    }
}
